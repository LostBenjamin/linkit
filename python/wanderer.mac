# ----------------------------------------------------------------
# Wanderers
# rainbow wandering pixels with mirror
# ----------------------------------------------------------------

%include symbols

$wanderer-draw-mode <DRAW-MIX>
$wanderer-brightness 0
$wanderer-render-time 50
$wanderer-advance-time 20
$wanderer-fade-type ffd
$wander-range 3
$wander-neg-range `-(<wander-range> / 2)`
$wanderer-max <NUM-LEDS>
$wanderer-max-half <wanderer-max>

[wanderer-app]
    application
    <wanderer-draw-mode>
    draw-mode
    <wanderer-brightness>
    level
    (((wanderer-setup 6)))
    (hsl-sequencer-start)
    (wanderer-render <wanderer-render-time>)

[wanderer-render]
    mirror
    flush

(((wanderer 6)))

[[wanderer-setup X
    (wanderer-setup-X)
]]

[[wanderer X
    [wanderer-setup-X]
        {seq-X},<wanderer-max>
        wheel-sequencer
        (wanderer-advance-X <wanderer-advance-time>)

    [wanderer-advance-X]
        <seq-X>,<MACRO-SEQ>,<wanderer-math-X>
        sequence
        position
        X
        palette-color
        <wanderer-fade-type>
        reset

    [wanderer-math-X]
        <wander-range>
        random-number
        push
        <wander-neg-range>
        push
        add
        <seq-X>,<GET-CURRENT>
        sequence
        push
        add
        <wanderer-max-half>
        push
        modulo
]]

%include hsl-sequencer

