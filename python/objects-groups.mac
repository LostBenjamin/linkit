
# ----------------------------------------------------------------
# Groups of Objects animation
# ----------------------------------------------------------------

%include symbols

[[objects-groups-start-template NUM-GROUPS GROUP-WIDTH GROUP-TIME RENDER-TIME OBJECTS-PER OBJECT-TIME OBJECT-SEQUENCER OBJECT-STEP OBJECT-INSTANCE-TIME OBJECT-DARKEN FACTOR OBJECT-DRAW-MACRO
    [objects-groups-start]
        [[[group-start-GROUP NUM-GROUPS]]]
        (groups-render GROUP-TIME)
        (render RENDER-TIME)

    [groups-render]
        [[[group-render-GROUP NUM-GROUPS]]]

    (((create-objects-for-group NUM-GROUPS OBJECTS-PER OBJECT-TIME GROUP-WIDTH OBJECT-SEQUENCER OBJECT-STEP OBJECT-INSTANCE-TIME OBJECT-DARKEN FACTOR OBJECT-DRAW-MACRO)))
]]

[[create-objects-for-group GROUP-NUM OBJECTS-PER OBJECT-TIME GROUP-WIDTH OBJECT-SEQUENCER OBJECT-STEP OBJECT-INSTANCE-TIME OBJECT-DARKEN FACTOR OBJECT-DRAW-MACRO
    (((object OBJECTS-PER GROUP-NUM `(OBJECT-INSTANCE-TIME*GROUP)+OBJECT-TIME` GROUP-WIDTH OBJECT-SEQUENCER `(GROUP-NUM*OBJECTS-PER)+GROUP` `(GROUP-NUM*-1)*OBJECT-STEP` OBJECT-DARKEN FACTOR OBJECT-DRAW-MACRO)))
]]

# -----------------------------------------------

[[group GROUP SCHEDULE START WIDTH OBJECTS-PER ERASE-MACRO
    [group-start-objects-GROUP]
        (((object-start-all OBJECTS-PER GROUP)))

    [group-start-GROUP]
        (group-start-objects-GROUP)

    [group-render-GROUP]
        (group-set-window-GROUP)
        {{
            (ERASE-MACRO)
        }}
        (((object-render-each OBJECTS-PER GROUP)))

    [group-set-window-GROUP]
        START, WIDTH
        set-position
]]

# -----------------------------------------------

[[object-start-all OBJECT GROUP
    (object-start-GROUP-OBJECT)
]]

[[object-render-each OBJECT GROUP
    (object-render-GROUP-OBJECT)
]]

[[object OBJECT GROUP SCHEDULE WIDTH SEQ-TYPE COLOR STEP DARKEN-LEVEL FACTOR DRAW-MACRO
    [object-start-GROUP-OBJECT]
        {seq-object-GROUP-OBJECT}, `WIDTH*FACTOR-1`
        SEQ-TYPE

        (object-step-GROUP-OBJECT SCHEDULE)

    [object-step-GROUP-OBJECT]
        {seq-object-GROUP-OBJECT}, <GET-NEXT>, STEP
        advance-sequence

    [object-render-GROUP-OBJECT]
        (group-set-window-GROUP)

        {seq-object-GROUP-OBJECT}, <GET-COMPUTED>
        get-sequence
        push
        FACTOR
        push
        divide-equals
        set-position
        {{
            COLOR
            push
            (DRAW-MACRO)
        }}
]]

