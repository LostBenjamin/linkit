# ----------------------------------------------------------------
# HSL Color Sequencer
# sequences palette colors automatically
# ----------------------------------------------------------------

%include symbols

$hsl-angle 60
$hsl-step 2
$hsl-time 100

[setup-hsl-sequencer]
    {seq-hsl},360
    seq
    (hsl-sequencer <hsl-time>)

[hsl-sequencer]
    <seq-hsl>,<GET-NEXT>,<hsl-step>
    seq
    sto
    <hsl-angle>
    rcl
    csh

